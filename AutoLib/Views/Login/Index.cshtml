@model AutoLib.Models.LoginModel;
@{
    ViewData["Title"] = "Login";
}

<h1>Se connecter</h1>

<form method="POST">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Firstname"></label>
        <input asp-for="Firstname" class="form-control" />
        <span asp-validation-for="Firstname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Lastname"></label>
        <input asp-for="Lastname" class="form-control" />
        <span asp-validation-for="Lastname" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DateNaissance"></label>
        <input asp-for="DateNaissance" type="date" class="form-control" />
        <span asp-validation-for="DateNaissance" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password"></label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<br />
<br />
<p>Pas encore de compte ?<a asp-controller="Register" asp-action="Index">cliquez ici</a>.</p>
